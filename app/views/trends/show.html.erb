<div id="content" role="main">

    <article class="post">
    
        <h2 class="entry-title">Qu&eacute; se dice sobre <%=@trend.name %>?</h2>
                
        <div class="entry-content">
			<table>
				<% @twits.each do |twit| %>
					<tr>
						<td>
							<%= linkify(twit.body).html_safe %>
							<br />
							<i><%= link_to twit.from_user, twiterer_path(twit.from_user_id)%></i>
						</td>
					</tr>
				<% end %>
			</table>
        </div> 
            
    </article> 
    
    <hr /> 

</div> 